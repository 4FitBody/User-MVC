@model Dictionary<string, string>

<div class="container">
    <div class="row">
        @foreach (var pair in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="@pair.Value" class="card-img-top" alt="BookCover">
                    <div class="card-body">
                        <p style="color: black;" class="card-text">@pair.Key</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>

    .card-img-top {
        width: 100%;
        height: 200px; 
        object-fit: cover; 
    }

    .col-4 {
        width: 33.33%;
        float: left;
        box-sizing: border-box;
        padding: 0 15px;
    }

    .dropdown {
        position: relative;
        display: inline-block;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: black;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.5);
        z-index: 1;
        overflow-y: auto;
        max-height: 200px;
        column-count: 2;
        column-gap: 20px;
        padding: 10px;
    }

    .dropdown-content a {
        color: black;
        padding: 10px 0;
        text-decoration: none;
        display: block;
    }

    .dropdown-content a:hover {
        background-color: black;
    }

    .dropdown:hover .dropdown-content {
        display: block;
    }

    .container {
        margin-top: 20px; 
    }

</style>

