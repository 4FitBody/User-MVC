@model FitnessApp.Core.Foods.Food
@{
    ViewData["Title"] = "Food Details";
}

<link rel='stylesheet' href='~/css/food.css'>
<link rel='stylesheet' href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css'>
<link rel='stylesheet' href='https://fonts.googleapis.com/css2?family=Poppins&amp;display=swap'>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.0.2/tailwind.min.css">
</head>

<body>
    <section class="text-gray-700 body-font">
        <div class="container mx-auto flex px-5 py-17 md:flex-row flex-col items-center">
            <div
                class="lg:flex-grow md:w-1/2 lg:pr-24 md:pr-16 flex flex-col md:items-start md:text-left mb-16 md:mb-0 items-center text-center">

                <h1 class="title-font sm:text-4xl text-3xl mb-4 font-medium text-gray-900">@Model.Title
                </h1>

                @{
                    // Remove <a> tags from Model.Description
                    string descriptionWithoutAnchorTags = System.Text.RegularExpressions.Regex.Replace(Model.Description,
                    @"<a\b[^>]*>(.*?)</a>", "");
                }
                <p class="mb-8 leading-relaxed">@Html.Raw(descriptionWithoutAnchorTags)</p>

                <div class="flex justify-center">
                    <button onclick="location.href='@Url.Action("GetWidget", new { id = Model.Id})'"
                        class="inline-flex text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded text-lg">Show
                        More</button>

                    <button style="margin: 0px 20px;" onclick="location.href='@Url.Action("Get")'"
                        class="inline-flex text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded text-lg">Return
                        to All</button>
                </div>

            </div>

            <div class="lg:max-w-lg  md:w-1/2 w-5/6">
                <iframe class="object-cover object-center rounded" width="420" height="315"
                    src="https://www.youtube.com/embed/@ViewBag.VideoId"></iframe>
            </div>

        </div>

        <h2 class="title-font sm:text-4xl text-3xl mb-4 font-medium text-gray-900">Ingredients</h2>

        <div>
            @Html.Raw(ViewBag.HtmlResponse)
        </div>
    </section>
</body>
