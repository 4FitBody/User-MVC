@model bool

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm">
        <div class="container-fluid">
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Just4Fit</a>
                    </li>
                    @if (@Model)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Food" asp-action="GetAll">Food</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Exercise" asp-action="Index">Exercise</a>
                        </li>
                        <li class="nav-item name">
                            <a class="nav-link" asp-area="">@ViewData["Username"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" method="post" asp-controller="Identity" asp-action="Logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Identity" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Identity" asp-action="Register">Register</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>